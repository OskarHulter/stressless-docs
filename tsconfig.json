{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/node20/tsconfig.json", "astro/tsconfigs/strict"],
  "include": [
    "**/*.ts"
  ],
  "ignore": [
    "node_modules",
    ".cache",
    "dist",
    ".yarn"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "stripInternal": true,
    "paths": {
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"]
    },
    "baseUrl": "."
  }
}
 